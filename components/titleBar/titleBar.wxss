/* components/titleBar/titleBar.wxss */
.icon{
  width: 6vw;
  height: 6vw;
}
.titlebar{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.col{
  display: flex;
  flex-direction: column;
}
.col:nth-child(1){
  margin-left: 4px;
  justify-content: center;
  align-items: center;
}
.col:nth-child(1) view:nth-child(1){
  font-size: 5vw;
  color: #fff;
}
.col:nth-child(1) view:nth-child(2){
  font-size: 4vw;
  color: #fff;
}
.col:nth-child(2){
  justify-content: center;
}
.col3-8{
  display: flex;
  flex-direction: column;
}
.col3-8 view{
  color: #eee;
  font-size: 3vw;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.col3-8 view:nth-child(1){
  justify-content: flex-end;
}
.col3-8 view:nth-child(2){
  justify-content: center;
}
.col:nth-child(3){
  flex-grow: 1;
  align-items: flex-end;
  margin-left: 4vw;
}
.col:nth-child(4){
  margin-left: 10rpx;
}

.col:nth-child(5){
  margin-left: 20rpx;
}
.col:nth-child(6){
  margin-left: 10rpx;
}
.col:nth-child(7){
  margin-left: 20rpx;
}
.col:nth-child(8){
  margin-left: 10rpx;
}
.col:nth-child(9){
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.col:nth-child(9) .icon{
  width: 3vw;
}
.col:nth-child(10){
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  align-items: center;
  margin-left: 4vw;
}
.col:nth-child(10) view{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.col:nth-child(10) view:nth-child(2){
  justify-content: flex-end;
}
.col:nth-child(11){
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
  color: #ff6100;
}
.col:nth-child(11) view{
  text-align: center;
  font-size: 3vw;
}


